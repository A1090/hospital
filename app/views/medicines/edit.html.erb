  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6 text-center">
          <%= form_for @medicine, :url =>{action: :update, id: @medicine.id} do |f| %>
          <div class="col-md-12">
            <h3 class="display-5 text-left  text-center text-white">Edit medicine info</h3>
          </div>
          <div class="col-md-12">
            <h5 class="display-5 text-left pl-5 text-white">&nbsp</h5>
          </div>
          <div class="form-group row"> <label for="medicine_name" class="col-5 col-form-label text-white">Name</label>
            <div class="col-3">
              <%= f.text_field 'name' %> </div>
            </div>
            <h5 class="display-5"></h5>
            <div class="form-group row"> <label for="medicine_company" class="col-5 col-form-label text-white">Company</label>
              <div class="col-3">
                <%= f.text_field 'company' %></div>
              </div>
              <h5 class="display-5"></h5>
              <div class="form-group row"> <label for="medicine_substances" class="col-5 col-form-label text-white">Substances</label>
                <div class="col-3">
                  <%= f.text_field 'substances' %> </div>
                </div>
                <div class="col-md-5"><h1>&nbsp</h1></div>
                <button type="submit" class="btn btn-primary w-25">Update</button>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <h1 class="display-1 text-left pl-5 text-white">&nbsp</h1>
