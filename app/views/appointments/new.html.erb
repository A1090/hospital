              <div class="container">
                <div class="row">
                  <div class="col-md-6"></div>
                  <div class="col-md-6 text-center">
                      <%=  form_for @appointment, as: :appointment, url: appointments_create_path(@appointment), method: :post do %>
                        <div class="col-md-12">
                          <h3 class="display-5 text-left  text-center text-white">Add a new Appointment</h3>
                        </div>
                        <div class="col-md-12">
                          <h5 class="display-5 text-left pl-5 text-white">&nbsp</h5>
                        </div>
                        <div class="form-group row"> <label for="appointment_patient_id" class="col-5 col-form-label text-white">Patient</label>
                          <div class="col-3">
                          <%= collection_select(:appointment, :patient_id, @patients, :id, :full_name) %> </div>
                        </div>
                        <h5 class="display-5"></h5>
                        <div class="form-group row"> <label for="appointment_medicine_id" class="col-5 col-form-label text-white">Medicine</label>
                          <div class="col-3">
                          <%= collection_select(:appointment, :medicine_id, @medicines, :id, :name) %></div>
                        </div>
                        <h5 class="display-5"></h5>
                        <div class="form-group row"> <label for="appointment_appointment_date" class="col-5 col-form-label text-white">Date</label>
                          <div class="col-3">
                          <%= date_field 'appointment', 'appointment_date' %> </div>
                        </div>
                        <h5 class="display-5"></h5>
                        <div class="form-group row"> <label for="appointment_diagnostic" class="col-5 col-form-label text-white">Diagnosis</label>
                          <div class="col-3">
                          <%= text_field 'appointment', 'diagnostic' %> </div>
                        </div>
                        <h5 class="display-5"></h5>
                        <div class="form-group row"> <label for="appointment_medicine_dose" class="col-5 col-form-label text-white">Medicine daily dose</label>
                          <div class="col-3">
                          <%= text_field 'appointment', 'medicine_dose' %></div>
                        </div>
                        <div class="col-md-5"><h1>&nbsp</h1></div>
                        <button type="submit" class="btn btn-primary w-25">Add</button>
                      <% end %>
                    </div>
                </div>
            </div>
