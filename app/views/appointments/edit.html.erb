<div class="section-parallax h-100 py-5 opaque-overlay" style="background-image: url('https://singularityhub.com/wp-content/uploads/2018/07/healthcare_shutterstock_277918613-1068x601.jpg');">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h5 class="display-5 text-left pl-5 text-white"></h5>
      </div>
    </div>
  </div>
  <div class="container-">
    <div class="row">
      <div class="col-md-12">
        <h1 class="display-1"></h1>
      </div>
    </div>
  </div>
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6 text-center">
          <%= form_for @appointment, :url =>{action: :update, id: @appointment.id} do |f| %>
          <div class="col-md-12">
            <h3 class="display-5 text-left  text-center text-white">Edit Appointment info</h3>
          </div>
          <div class="col-md-12">
            <h5 class="display-5 text-left pl-5 text-white">&nbsp</h5>
          </div>
          <div class="form-group row"> <label for="appointment_patient_id" class="col-5 col-form-label text-white">Patient</label>
            <div class="col-3">
              <%= f.collection_select(:patient_id, @patients, :id, :full_name) %> 
            </div>
          </div>
          <h5 class="display-5"></h5>
          <div class="form-group row"> 
            <label for="appointment_medicine_id" class="col-5 col-form-label text-white">Medicine</label>
            <div class="col-3">
              <%= f.collection_select(:medicine_id, @medicines, :id, :name) %>
            </div>
          </div>
          <h5 class="display-5"></h5>
          <div class="form-group row"> 
            <label for="appointment_appointment_date" class="col-5 col-form-label text-white">Date</label>
            <div class="col-3">
              <%= f.date_field 'appointment_date' %> 
            </div>
          </div>
          <h5 class="display-5"></h5>
          <div class="form-group row"> 
            <label for="appointment_diagnostic" class="col-5 col-form-label text-white">Diagnosis</label>
            <div class="col-3">
              <%= f.text_field 'diagnostic' %> 
            </div>
          </div>
          <h5 class="display-5"></h5>
          <div class="form-group row"> 
            <label for="appointment_medicine_dose" class="col-5 col-form-label text-white">Medicine daily dose</label>
            <div class="col-3">
              <%= f.text_field 'medicine_dose' %>
            </div>
          </div>
          <div class="col-md-5">
            <h1>&nbsp</h1>
          </div>
          <button type="submit" class="btn btn-primary w-25">Update</button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <h1 class="display-1 text-left pl-5 text-white">&nbsp</h1>
    </div>
  </div>
</div>
