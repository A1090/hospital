
<div class="section-parallax h-100 py-5 opaque-overlay" style="background-image: url('https://singularityhub.com/wp-content/uploads/2018/07/healthcare_shutterstock_277918613-1068x601.jpg');">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h5 class="display-5 text-left pl-5 text-white"></h5>
      </div>
    </div>
  </div>
  <div class="container-">
    <div class="row">
      <div class="col-md-12">
        <h1 class="display-1"></h1>
      </div>
    </div>
  </div>
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6 text-center">
          <%= form_for @patient, :url =>{action: :update, id: @patient.id} do |f| %>
          <div class="col-md-12">
            <h3 class="display-5 text-left  text-center text-white">Edit patient</h3>
          </div>
          <div class="col-md-12">
            <h5 class="display-5 text-left pl-5 text-white">&nbsp</h5>
          </div>
          <div class="form-group row"> <label for="patient_first_name" class="col-5 col-form-label text-white">First Name</label>
            <div class="col-3">
              <%= f.text_field 'first_name' %> </div>
            </div>
            <h5 class="display-5"></h5>
            <div class="form-group row"> <label for="patient_last_name" class="col-5 col-form-label text-white">Last Name</label>
              <div class="col-3">
                <%= f.text_field 'last_name' %></div>
              </div>
              <h5 class="display-5"></h5>
              <div class="form-group row"> <label for="patient_address" class="col-5 col-form-label text-white">Address</label>
                <div class="col-3">
                  <%= f.text_field 'address' %> </div>
                </div>
                <h5 class="display-5"></h5>
                <div class="form-group row"> <label for="patient_cnp" class="col-5 col-form-label text-white">CNP</label>
                  <div class="col-3">
                    <%= f.text_field 'cnp' %> </div>
                  </div>
                  <h5 class="display-5"></h5>
                  <div class="form-group row"> <label for="patient_ensurance_id" class="col-5 col-form-label text-white">Ensurance id</label>
                    <div class="col-3">
                      <%= f.text_field 'ensurance_id' %></div>
                    </div>
                    <div class="col-md-5"><h1>&nbsp</h1></div>
                    <button type="submit" class="btn btn-primary w-25">Update</button>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <h1 class="display-1 text-left pl-5 text-white">&nbsp</h1>
              </div>
