<h1>Edit Patient Details</h1>

<%= form_for @patient, :url =>{action: :update, id: @patient.id} do |f| %>

<p>Firstname: <%= f.text_field 'first_name' %></p>
<p>Lastname: <%= f.text_field  'last_name' %></p>
<p>Address: <%= f.text_field  'address' %></p>
<p>CNP: <%= f.text_field  'cnp' %></p>
<p>Ensurance id: <%= f.text_field  'ensurance_id' %></p>

<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {action: :list} %>